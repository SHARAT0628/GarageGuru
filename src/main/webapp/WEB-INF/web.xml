<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.attendance.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddStaffServlet</servlet-name>
        <servlet-class>com.attendance.AddStaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStaffServlet</servlet-name>
        <url-pattern>/AddStaffServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AttendanceServlet</servlet-name>
        <servlet-class>com.attendance.AttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceServlet</servlet-name>
        <url-pattern>/AttendanceServlet</url-pattern
        </servlet-mapping>

    <servlet>
        <servlet-name>PayrollServlet</servlet-name>
        <servlet-class>com.attendance.PayrollServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayrollServlet</servlet-name>
        <url-pattern>/PayrollServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IncomeExpenseServlet</servlet-name>
        <servlet-class>com.attendance.IncomeExpenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IncomeExpenseServlet</servlet-name>
        <url-pattern>/IncomeExpenseServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.attendance.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
